								span.main__slide-to-unlock
									i.fa.fa-angle-double-left
									|                   Slide to unlock
						.screen--mod.screen--unlocked
							.screen__top
								span.top__item.top__connection
									span.connection__dot
									span.connection__dot
									span.connection__dot
									span.connection__dot
									span.connection__dot
									span.connection__wifi.fa.fa-rss(aria-hidden='true')
								span.top__item.top__time
								span.top__item.top__charge
									span.charge__val 27%
									span.charge__battery.fa.fa-battery-quarter(aria-hidden='true')
							ng-app
				.iphone__part.bottom
					i.home--btn
				.iphone__part.dop-details
					i.dop-details__item.dop-details__mute
					i.dop-details__item.dop-details__louder
					i.dop-details__item.dop-details__silent
					i.dop-details__item.dop-details__block
			.iphone-vibration__wrap
				.iphone-vibration.iphone-vibration--top
					.iphone-vibration__item.iphone-vibration__item--small
					.iphone-vibration__item.iphone-vibration__item--big
				.iphone-vibration.iphone-vibration--bottom
					.iphone-vibration__item.iphone-vibration__item--small
					.iphone-vibration__item.iphone-vibration__item--big
