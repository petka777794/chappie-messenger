		.loader
			.loader-inner.line-scale
				div
				div
				div
				div
				div
		section.wrap.loaded
			.iphone.loaded
				.iphone__part.top
					i.top__sound
				.iphone__part.screen__wrap
					.screen.loaded
						.screen--mod.screen--locked
							.screen__top
								span.top__item.top__connection
									span.connection__dot
									span.connection__dot
									span.connection__dot
									span.connection__dot
									span.connection__dot
									span.connection__wifi.fa.fa-rss(aria-hidden='true')
								span.top__item.top__time
								span.top__item.top__charge
									span.charge__val 27%
									span.charge__battery.fa.fa-battery-quarter(aria-hidden='true')
							.screen__main
								h1.main__time
								h6.main__date
								.main__message.loaded
									p
										i.fa.fa-envelope-o.message__icon(aria-hidden='true')
